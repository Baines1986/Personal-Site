<% content_for :head do %>
    <div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">

        <!-- One per Carousel Image -->
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
      </ol>

      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <%= image_tag('P6731_Baines_002.jpg', id: 'first-slide', alt: 'Technology') %>
          <div class="carousel-caption">
            <h1>About Stephen</h1>
            <%= link_to about_path do %>
                <p id="button" class="btn btn-primary btn-lg" role="button">About</p>
            <% end %>
          </div>
        </div>

        <div class="item">
          <%= image_tag('ob.jpg', id: 'second-slide', alt: 'Technology') %>
          <div class="carousel-caption">
            <h1>Portfolio</h1>
            <%= link_to portfolio_path do %>
                <p id="button" class="btn btn-primary btn-lg" role="button">Portfolio</p>
            <% end %>
          </div>
        </div>

        <div class="item">
          <%= image_tag('1.jpg', id: 'third-slide', alt: 'Technology') %>
          <div class="carousel-caption">
            <h1>Blog</h1>
            <%= link_to blog_path do %>
                <p id="button" class="btn btn-primary btn-lg" role="button">Blog</p>
            <% end %>
          </div>
        </div>

        <div class="item">
          <%= image_tag('tech-2.jpg', id: 'fourth-slide', alt: 'Technology') %>
          <div class="carousel-caption">
            <h1>Products & Services</h1>
            <%= link_to products_path do %>
                <p id="button" class="btn btn-primary btn-lg" role="button">Products</p>
            <% end %>
          </div>
        </div>

        <div class="item">
          <%= image_tag('6.jpg', id: 'fifth-slide', alt: 'Technology') %>
          <div class="carousel-caption">
            <h1>Contact</h1>
            <%= link_to contact_path do %>
                <p id="button" class="btn btn-primary btn-lg" role="button">Contact</p>
            <% end %>
          </div>
        </div>

      </div>

      <!-- Carousel Control -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div><!-- /.carousel -->
<% end %>


